# MusicTruth Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# LLM Configuration (Optional - for AI-powered analysis)
# ============================================================================

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Default LLM Provider (gemini, openai, anthropic, ollama)
DEFAULT_LLM_PROVIDER=gemini

# ============================================================================
# Metadata Enrichment APIs (Optional)
# ============================================================================

# Spotify (for metadata enrichment)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# MusicBrainz (no key required, but you can set a contact email)
MUSICBRAINZ_CONTACT_EMAIL=your_email@example.com

# ============================================================================
# Analysis Settings
# ============================================================================

# Default analysis mode (quick, standard, deep, forensic)
DEFAULT_ANALYSIS_MODE=standard

# Default output formats (comma-separated: json,html,csv)
DEFAULT_OUTPUT_FORMATS=json,html
